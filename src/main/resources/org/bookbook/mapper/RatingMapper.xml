<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="org.bookbook.mapper.RatingMapper">

	<select id="getRatingList" resultType="long">
		select rating_id from
		book_rating
		where book_id = #{bookId}
	</select>

	<insert id="addRating">
		insert into book_rating(book_id, rating, user_id)
		values
		(#{bookId}, #{rating}, #{userId})
	</insert>
	
